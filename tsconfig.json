{
  "compilerOptions": {
    // "baseUrl": "./src/",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "routes/*": ["./src/routes/*"],
      "models/*": ["./src/models/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "controllers/*": ["./src/controllers/*"]
    }
    // "paths": {
    //   "@/*": ["./*"],
    //   "types/*": ["types/*"],
    //   "utils/*": ["utils/*"],
    //   "routes/*": ["routes/*"],
    //   "models/*": ["models/*"],
    //   "middlewares/*": ["middlewares/*"],
    //   "controllers/*": ["controllers/*"]
    // }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
